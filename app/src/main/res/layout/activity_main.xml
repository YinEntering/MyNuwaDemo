<com.example.frank.mysticklayout.StickyNavLayout xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <RelativeLayout
    android:id="@id/id_stickynavlayout_topview"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#4400ff00" >

    <TextView
        android:id="@+id/top_text"
        android:layout_width="match_parent"
        android:layout_height="240dp"
        android:gravity="center"
        android:text="第一次运行，有bug"
        android:textSize="30sp"
        android:textStyle="bold" />
</RelativeLayout>

    <com.example.frank.mysticklayout.SimpleViewPagerIndicator
        android:id="@id/id_stickynavlayout_indicator"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="#ffffffff" >
    </com.example.frank.mysticklayout.SimpleViewPagerIndicator>

    <android.support.v4.view.ViewPager
        android:id="@id/id_stickynavlayout_viewpager"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#44ff0000" >
    </android.support.v4.view.ViewPager>

</com.example.frank.mysticklayout.StickyNavLayout>